{
  "schemaVersion": 1,
  "id": "drunkfletchintable",
  "version": "${version}",

  "name": "Drunk Fletchin' Table",
  "description": "Breathes new life into the forgotten fletching table",
  "authors": [
    "leocth"
  ],
  "contact": {
    "sources": "https://github.com/LeoCTH/drunk-fletchin-table"
  },

  "license": "MIT",
  "icon": "assets/drunkfletchintable/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.drunkfletchintable.DrunkFletchinTable"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.drunkfletchintable.client.DrunkFletchinTableClient"
      }
    ]
  },
  "mixins": [
    "drunkfletchintable.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.9.0",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": ">=1.17"
  },
  "suggests": {
    "flamingo": "*"
  }
}
